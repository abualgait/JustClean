<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
                name="viewmodel"
                type="com.justclean.app.ui.navhostactivity.postdetails.PostDetailsFragVm" />


        <variable
                name="adapter"
                type="com.justclean.app.shared.adapters.CommentsListAdapter" />
    </data>


    <ViewFlipper
            android:id="@+id/mViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <include
                android:id="@+id/main_layout_display"
                layout="@layout/frag_main_post_details"
                app:adapter="@{adapter}"
                app:viewmodel="@{viewmodel}" />

        <include layout="@layout/app_loading_screen" />

        <include layout="@layout/app_no_result_found" />

        <include layout="@layout/app_no_internet_connection" />

        <include layout="@layout/app_server_error" />
    </ViewFlipper>


</layout>